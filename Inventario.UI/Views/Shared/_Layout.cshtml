<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Pedidos360</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link href="~/Content/DataTable/dataTables.dataTables.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            min-height: 100vh;
            background-color: #f8f9fa;
            font-family: "Segoe UI", sans-serif;
        }

        .sidebar {
            width: 240px;
            background-color: #0d1b2a;
            color: #fff;
            display: flex;
            flex-direction: column;
            padding: 1rem;
            position: fixed;
            top: 0;
            bottom: 0;
            box-shadow: 2px 0 12px rgba(0, 0, 0, 0.2);
        }

        .sidebar .brand {
            text-align: center;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.15);
            margin-bottom: 1rem;
        }

        .sidebar .brand a {
            color: #fff;
            text-decoration: none;
            font-weight: 600;
            font-size: 1.1rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .sidebar nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar nav li {
            margin-bottom: 0.3rem;
        }

        .sidebar nav a {
            display: flex;
            align-items: center;
            gap: 0.6rem;
            padding: 0.6rem 0.8rem;
            border-radius: 10px;
            color: #ffffff;
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .sidebar nav a:hover {
            background-color: #1b263b;
            padding-left: 1rem;
        }

        .sidebar .user-section {
            margin-top: auto;
            border-top: 1px solid rgba(255, 255, 255, 0.15);
            padding-top: 1rem;
        }

        .sidebar .user-info {
            display: flex;
            align-items: center;
            gap: 0.7rem;
            padding: 0.6rem;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            margin-bottom: 0.8rem;
        }

        .sidebar .btn-logout {
            width: 100%;
            border: none;
            border-radius: 8px;
            padding: 0.6rem;
            background-color: #d9534f;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

        .sidebar .btn-logout:hover {
            background-color: #c9302c;
        }

        .content {
            flex: 1;
            margin-left: 240px;
            padding: 2rem;
        }

        footer {
            text-align: center;
            margin-top: 2rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="brand">
            <a href="@Url.Action("Index", "Home")">
                <i class="fas fa-cubes"></i>
                <span>PEDIDOS360</span>
            </a>
        </div>
        <nav>
            <ul class="nav flex-column">
                @if (User.IsInRole("Administrador"))
                {
                    <li>
                        <a href="@Url.Action("ListarProductos", "Productos")">
                            <i class="fas fa-boxes-stacked"></i>
                            <span>Productos</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ListarClientes", "Clientes")">
                            <i class="fas fa-handshake"></i>
                            <span>Clientes</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("UsuariosPendientes", "Usuarios")">
                            <i class="fas fa-users-gear"></i>
                            <span>Gestion de Usuarios</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Cupones")">
                            <i class="fas fa-ticket-alt"></i>
                            <span>Cupones</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("ðŸ›’ Pedidos", "Index", "Pedidos", new { area = "" }, new { @class = "nav-link text-white" })
                    </li>
                }
                @if (!User.IsInRole("Administrador") && (User.IsInRole("Ventas") || User.IsInRole("Operaciones")))
                {
                    <li>
                        <a href="@Url.Action("Index", "Catalogo")">
                            <i class="fas fa-store"></i>
                            <span>Catalogo</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("ðŸ“‹ Mis Pedidos", "MisPedidos", "Pedidos", new { area = "" }, new { @class = "nav-link text-white" })
                    </li>
                }
            </ul>
        </nav>
        <div class="user-section">
            @if (Request.IsAuthenticated)
            {
                <div class="user-info">
                    <i class="fas fa-user-circle fa-lg"></i>
                    <div>
                        <div class="fw-semibold">@User.Identity.Name</div>
                        <small class="text-uppercase text-muted">En linea</small>
                    </div>
                </div>
                <form action="@Url.Action("LogOff", "Account")" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-logout">
                        <i class="fas fa-sign-out-alt me-2"></i>Salir
                    </button>
                </form>
            }
            else
            {
                <div class="d-grid gap-2">
                    <a class="btn btn-outline-light" href="@Url.Action("Login", "Account")">
                        <i class="fas fa-sign-in-alt me-2"></i>Ingresar
                    </a>
                    <a class="btn btn-outline-light" href="@Url.Action("Register", "Account")">
                        <i class="fas fa-user-plus me-2"></i>Registrarse
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Pedidos360</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/DataTable/dataTables.js"></script>
    <script src="~/Scripts/SweetAlert/sweetalert2@11.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
