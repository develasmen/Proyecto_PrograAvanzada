@model Inventario.Abstracciones.ModelosParaUI.ClienteDto

@{
    ViewBag.Title = Model.Id == 0 ? "Crear Nuevo Cliente" : "Editar Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">@ViewBag.Title</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="p-4 border rounded shadow-sm bg-light">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="row g-3">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.CedulaJuridica, new { @class = "form-label" })
                            @Html.EditorFor(model => model.CedulaJuridica, new { htmlAttributes = new { @class = "form-control", placeholder = "1-0234-0567" } })
                            @Html.ValidationMessageFor(model => model.CedulaJuridica, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Correo, new { @class = "form-label" })
                            @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control", type = "email", placeholder = "ejemplo@correo.com" } })
                            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Telefono, new { @class = "form-label" })
                            @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control", placeholder = "8888-1234" } })
                            @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-12 mb-3">
                            @Html.LabelFor(model => model.Direccion, new { @class = "form-label" })
                            @Html.TextAreaFor(model => model.Direccion, 3, 1, new { @class = "form-control", placeholder = "Dirección completa del cliente" })
                            @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 d-flex align-items-center mt-4">
                            <div class="form-check form-switch">
                                @Html.CheckBoxFor(model => model.Estado, new { @class = "form-check-input", role = "switch" })
                                @Html.LabelFor(model => model.Estado, "Activo", new { @class = "form-check-label" })
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <input type="submit" value="Guardar Cliente" class="btn btn-success btn-lg" />
                    </div>
                </div>
            }

            <div class="mt-3">
                @Html.ActionLink("Volver a la Lista", "ListarClientes", "Clientes", null, new { @class = "btn btn-secondary btn-sm" })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}