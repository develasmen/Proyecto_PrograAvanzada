@model IEnumerable<Inventario.Abstracciones.ModelosParaUI.ClienteDto>
@{
    ViewBag.Title = "Gestión de Clientes";
    var hayRegistros = Model.Any();
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<style>
    .action-icons a {
        font-size: 1.2rem;
        text-decoration: none;
        margin: 0 8px;
    }

    .busqueda-icono {
        background-color: #f8f9fa;
        border-right: none;
    }

    #busqueda-clientes {
        border-left: none;
        box-shadow: none;
    }
</style>
<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white">
            <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3">
                <h3 class="mb-0"><i class="fas fa-users me-2"></i>@ViewBag.Title</h3>
                <div class="d-flex flex-column flex-md-row align-items-md-center gap-2 w-100 w-lg-auto">
                    <div class="input-group shadow-sm">
                        <span class="input-group-text busqueda-icono"><i class="fas fa-search"></i></span>
                        <input type="text" id="busqueda-clientes" class="form-control" placeholder="Buscar por nombre o cédula..." autocomplete="off" />
                    </div>
                    @Html.ActionLink(" Agregar Cliente", "CrearCliente", "Clientes", null, new { @class = "btn btn-primary w-100 w-md-auto" })
                </div>
            </div>
        </div>
        <div class="card-body">
            <div id="clientes-loading" class="text-center text-muted my-3 d-none">
                <i class="fas fa-spinner fa-spin me-2"></i>Buscando clientes...
            </div>

            <div id="clientes-empty" class="alert alert-info text-center @(hayRegistros ? "d-none" : string.Empty)">
                <h4 class="alert-heading">No hay clientes registrados</h4>
                <p>Utiliza el botón "Agregar Cliente" para comenzar.</p>
            </div>

            <div id="clientes-error" class="alert alert-danger text-center d-none">
                <h4 class="alert-heading">Ocurrió un error</h4>
                <p>No pudimos obtener los clientes. Inténtalo de nuevo en unos segundos.</p>
            </div>

            <div class="table-responsive @(hayRegistros ? string.Empty : "d-none")" id="contenedor-tabla-clientes">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CedulaJuridica)</th>
                            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Correo)</th>
                            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="tabla-clientes-body">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.CedulaJuridica)</td>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                                <td class="text-center">
                                    @if (item.Estado)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                                <td class="text-center action-icons">
                                    <a href="@Url.Action("EditarCliente", "Clientes", new { id = item.Id })" class="text-warning" title="Editar">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a href="@Url.Action("DetallesCliente", "Clientes", new { id = item.Id })" class="text-info" title="Ver Detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("EliminarCliente", "Clientes", new { id = item.Id })" class="text-danger" title="Eliminar">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/Inventario/clientes-admin.js"></script>
}
