@model IEnumerable<Inventario.Abstracciones.ModelosParaUI.ProductoDto>

@{
    ViewBag.Title = "Gestión de Productos";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

<style>
    .action-icons a {
        font-size: 1.2rem;
        text-decoration: none;
        margin: 0 8px;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-boxes-stacked me-2"></i>@ViewBag.Title</h3>
                @Html.ActionLink(" Agregar Producto", "CrearProducto", "Productos", null, new { @class = "btn btn-primary" })
            </div>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <h4 class="alert-heading">No hay productos registrados</h4>
                    <p>Utiliza el botón "Agregar Producto" para comenzar.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.SKU)</th>
                                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                                <th>@Html.DisplayNameFor(model => model.Marca)</th>
                                <th>@Html.DisplayNameFor(model => model.Precio)</th>
                                <th class="text-center">@Html.DisplayNameFor(model => model.CantidadEnStock)</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.SKU)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Marca)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                                    <td class="text-center">@Html.DisplayFor(modelItem => item.CantidadEnStock)</td>
                                    <td class="text-center action-icons">
                                        <a href="@Url.Action("EditarProducto", "Productos", new { id = item.Id })" class="text-warning" title="Editar">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                        <a href="@Url.Action("DetallesProducto", "Productos", new { id = item.Id })" class="text-info" title="Ver Detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("EliminarProducto", "Productos", new { id = item.Id })" class="text-danger" title="Eliminar">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>