@model Inventario.Abstracciones.ModelosParaUI.ProductoDto
@{
    ViewBag.Title = Model.Id == 0 ? "Crear Nuevo Producto" : "Editar Producto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">@ViewBag.Title</h2>

            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="p-4 border rounded shadow-sm bg-light">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="row g-3">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Marca, new { @class = "form-label" })
                            @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-12 mb-3">
                            @Html.LabelFor(model => model.Descripcion, new { @class = "form-label" })
                            @Html.TextAreaFor(model => model.Descripcion, 3, 1, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.SKU, new { @class = "form-label" })
                            @Html.EditorFor(model => model.SKU, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SKU, "", new { @class = "text-danger" })
                        </div>  

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.Precio, new { @class = "form-label" })
                            @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01" } })
                            @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.CantidadEnStock, new { @class = "form-label" })
                            @Html.EditorFor(model => model.CantidadEnStock, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                            @Html.ValidationMessageFor(model => model.CantidadEnStock, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 d-flex align-items-center mt-4">
                            <div class="form-check form-switch">
                                @Html.CheckBoxFor(model => model.Estado, new { @class = "form-check-input", role = "switch" })
                                @Html.LabelFor(model => model.Estado, "Activo", new { @class = "form-check-label" })
                            </div>
                        </div>

                        <hr class="my-4" />

                        @* Sección de Imagen *@
                        <div class="col-12 mb-3">
                            <label class="form-label d-block">Imagen actual</label>
                            <img id="previewImg" src="@Url.Action("ImagenDeProductoPorSKU", "Productos", new { sku = Model.SKU })" alt="Imagen del producto" style="max-width: 240px; height: auto; border:1px solid #ddd; padding:4px; border-radius:4px;" />
                        </div>

                        <div class="col-12 mb-3">
                            <label for="archivo" class="form-label">Subir/Cambiar imagen</label>
                            <input type="file" id="archivo" name="archivo" class="form-control" accept="image/*" />
                        </div>
                        @* Fin Sección de Imagen *@

                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <input type="submit" value="Guardar Producto" class="btn btn-success btn-lg" />
                    </div>
                </div>
            }

            <div class="mt-3">
                @Html.ActionLink("Volver a la Lista", "ListarProductos", "Productos", null, new { @class = "btn btn-secondary btn-sm" })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        (function () {
            var input = document.getElementById('archivo');
            var img = document.getElementById('previewImg');
            if (input && img) {
                input.addEventListener('change', function (evt) {
                    const file = evt.target.files && evt.target.files[0];
                    if (!file) return;
                    const reader = new FileReader();
                    reader.onload = function (e) { img.src = e.target.result; };
                    reader.readAsDataURL(file);
                });
            }
        })();
    </script>
}