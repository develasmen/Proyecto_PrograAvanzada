@model List<Inventario.UI.Identity.ApplicationUser>
@{
    ViewBag.Title = "Usuarios Pendientes de Aprobación";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="fas fa-user-clock text-warning"></i> Usuarios Pendientes de Aprobación
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No hay usuarios pendientes de aprobación.
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Usuario</th>
                                <th>Nombre Completo</th>
                                <th>Email</th>
                                <th>Cédula</th>
                                <th>Fecha Registro</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model)
                            {
                                <tr>
                                    <td><strong>@usuario.UserName</strong></td>
                                    <td>@usuario.NombreCompleto</td>
                                    <td>@usuario.Email</td>
                                    <td>@usuario.Cedula</td>
                                    <td>@usuario.FechaRegistro.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a href="@Url.Action("AprobarUsuario", new { id = usuario.Id })"
                                           class="btn btn-success btn-sm">
                                            <i class="fas fa-check"></i> Aprobar
                                        </a>
                                        @using (Html.BeginForm("RechazarUsuario", "Usuarios", new { id = usuario.Id }, FormMethod.Post, new { style = "display:inline;" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm"
                                                    onclick="return confirm('¿Está seguro de rechazar este usuario?')">
                                                <i class="fas fa-times"></i> Rechazar
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("UsuariosAprobados")" class="btn btn-secondary">
            <i class="fas fa-users"></i> Ver Usuarios Aprobados
        </a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
            <i class="fas fa-home"></i> Volver al Inicio
        </a>
    </div>
</div>