@model Inventario.Abstracciones.ModelosParaUI.CuponDescuentoDto
@using System.Web.Mvc
@{
    ViewBag.Title = Model.Id == 0 ? "Crear cupon" : "Editar cupon";
    var productos = ViewBag.Productos as List<SelectListItem> ?? new List<SelectListItem>();
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@ViewBag.Title</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="row g-3">
                            <div class="col-12">
                                <small class="text-uppercase text-muted fw-semibold">Datos generales</small>
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Codigo, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control", maxlength = 50 })
                                @Html.ValidationMessageFor(m => m.Codigo, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.ProductoId, new { @class = "form-label" })
                                @Html.DropDownListFor(m => m.ProductoId, productos, new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.ProductoId, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-12">
                                @Html.LabelFor(m => m.Descripcion, new { @class = "form-label" })
                                @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 2 })
                            </div>

                            <div class="col-12 mt-2">
                                <small class="text-uppercase text-muted fw-semibold">Condiciones de uso</small>
                            </div>
                            <div class="col-md-4">
                                @Html.LabelFor(m => m.PorcentajeDescuento, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.PorcentajeDescuento, new { @class = "form-control", type = "number", step = "0.01", min = "0", max = "100" })
                                @Html.ValidationMessageFor(m => m.PorcentajeDescuento, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4">
                                @Html.LabelFor(m => m.MontoMaximo, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.MontoMaximo, new { @class = "form-control", type = "number", step = "0.01", min = "0" })
                            </div>
                            <div class="col-md-4">
                                @Html.LabelFor(m => m.LimiteUso, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.LimiteUso, new { @class = "form-control", type = "number", min = "0" })
                            </div>

                            <div class="col-12 mt-2">
                                <small class="text-uppercase text-muted fw-semibold">Vigencia</small>
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.FechaInicio, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.FechaInicio, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(m => m.FechaInicio, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.FechaFin, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.FechaFin, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(m => m.FechaFin, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-12">
                                <div class="form-check form-switch mt-2">
                                    @Html.CheckBoxFor(m => m.Activo, new { @class = "form-check-input", role = "switch" })
                                    @Html.LabelFor(m => m.Activo, new { @class = "form-check-label" })
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-success">Guardar</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
