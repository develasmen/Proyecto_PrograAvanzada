@{
    ViewBag.Title = "Inicio - Pedidos360";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 50px 0;
        border-radius: 15px;
        margin-bottom: 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .module-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 15px;
        overflow: hidden;
        height: 100%;
    }

        .module-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }

    .module-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        color: #667eea;
    }

    .module-card .card-body {
        padding: 40px 30px;
        text-align: center;
    }

    .stats-card {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        text-align: center;
        margin-bottom: 20px;
    }

    .stats-number {
        font-size: 3rem;
        font-weight: bold;
        color: #667eea;
    }

    .stats-label {
        color: #6c757d;
        font-size: 1.1rem;
        margin-top: 10px;
    }
</style>

<main>
    <section class="hero-section text-center">
        <div class="container">
            <h1 class="display-3 fw-bold mb-4">
                <i class="fas fa-boxes-stacked me-3"></i>Bienvenido a Pedidos360
            </h1>
            <p class="lead fs-4 mb-4">
                Lorem ipsum dolor sit amet consectetur adipiscing elit. Quisque faucibus ex sapien vitae pellentesque sem placerat. In id cursus mi pretium tellus duis convallis.
            </p>
        </div>
    </section>

    <section class="container mb-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="stats-card">
                    <i class="fas fa-box-open text-primary" style="font-size: 2.5rem;"></i>
                    <div class="stats-number">@ViewBag.TotalProductos</div>
                    <div class="stats-label">Productos Registrados</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card">
                    <i class="fas fa-users text-success" style="font-size: 2.5rem;"></i>
                    <div class="stats-number">@ViewBag.TotalClientes</div>
                    <div class="stats-label">Clientes Activos</div>
                </div>
            </div>
        </div>
    </section>

    <section class="container">
        <h2 class="text-center mb-5">
            <i class="fas fa-grip me-2"></i>Módulos del Sistema
        </h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card module-card shadow">
                    <div class="card-body">
                        <div class="module-icon">
                            <i class="fas fa-boxes"></i>
                        </div>
                        <h3 class="card-title mb-3">Gestión de Productos</h3>
                        <p class="card-text text-muted mb-4">
                            Lorem ipsum dolor sit amet consectetur adipiscing elit. Quisque faucibus ex sapien vitae pellentesque sem placerat. In id cursus mi pretium tellus duis convallis.
                        </p>
                        <div class="d-flex justify-content-center gap-2">
                            <a href="@Url.Action("ListarProductos", "Productos")" class="btn btn-primary">
                                <i class="fas fa-list me-2"></i>Ver Listado
                            </a>
                            <a href="@Url.Action("CrearProducto", "Productos")" class="btn btn-outline-primary">
                                <i class="fas fa-plus me-2"></i>Agregar Nuevo
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card module-card shadow">
                    <div class="card-body">
                        <div class="module-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h3 class="card-title mb-3">Gestión de Clientes</h3>
                        <p class="card-text text-muted mb-4">
                            Lorem ipsum dolor sit amet consectetur adipiscing elit. Quisque faucibus ex sapien vitae pellentesque sem placerat. In id cursus mi pretium tellus duis convallis.
                        </p>
                        <div class="d-flex justify-content-center gap-2">
                            <a href="@Url.Action("ListarClientes", "Clientes")" class="btn btn-success">
                                <i class="fas fa-list me-2"></i>Ver Listado
                            </a>
                            <a href="@Url.Action("CrearCliente", "Clientes")" class="btn btn-outline-success">
                                <i class="fas fa-user-plus me-2"></i>Agregar Nuevo
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="container mt-5 mb-5">
        <h2 class="text-center mb-5">
            <i class="fas fa-star me-2"></i>Características Destacadas
        </h2>
        <div class="row justify-content-center text-center">
            <div class="col-md-3 mb-4">
                <i class="fas fa-search fa-3x text-primary mb-3"></i>
                <h5>Búsqueda Avanzada</h5>
                <p class="text-muted">Lorem ipsum dolor sit amet consectetur adipiscing elit. Quisque faucibus ex sapien vitae pellentesque sem placerat. In id cursus mi pretium tellus duis convallis.</p>
            </div>
            <div class="col-md-3 mb-4">
                <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                <h5>Datos Seguros</h5>
                <p class="text-muted">Lorem ipsum dolor sit amet consectetur adipiscing elit. Quisque faucibus ex sapien vitae pellentesque sem placerat. In id cursus mi pretium tellus duis convallis.</p>
            </div>
            <div class="col-md-3 mb-4">
                <i class="fas fa-bolt fa-3x text-warning mb-3"></i>
                <h5>Rápido y Eficiente</h5>
                <p class="text-muted">Lorem ipsum dolor sit amet consectetur adipiscing elit. Quisque faucibus ex sapien vitae pellentesque sem placerat. In id cursus mi pretium tellus duis convallis.</p>
            </div>
        </div>
    </section>
</main>